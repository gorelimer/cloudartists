{% extends "header.html.jinja" %}
{% block head %}
{{ super() }}
<link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
{% endblock %}
{% block content %}
    <div class="search-container">
        <input type="text" class="search-input" placeholder="название города..." id="cityInput">
        <button class="search-button" onclick="searchUsers()">искать</button>
    </div>

    <script>
        function searchUsers() {
            var city = document.getElementById("cityInput").value;
            if (city.trim() !== "") {
                window.location.href = "/users?city=" + encodeURIComponent(city);
            }
        }
    </script>
{% endblock %}
